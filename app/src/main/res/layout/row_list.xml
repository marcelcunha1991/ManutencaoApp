<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="6dp"
        android:layout_weight="0.8">

        <ImageView
            android:id="@+id/imgStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/play"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.6">

        <TextView
            android:id="@+id/txtDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtDataCriacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/txtDescricao"
            android:layout_below="@+id/txtDescricao"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="20dp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.6">

        <TextView
            android:id="@+id/txtFalha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/txtDataCriacao"
            android:layout_below="@+id/txtDataCriacao"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtResponsavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/txtFalha"
            android:layout_below="@+id/txtFalha"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="20dp" />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_weight="0.8">

        <ImageView
            android:id="@+id/imgStop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/stop"/>


    </LinearLayout>




</LinearLayout>